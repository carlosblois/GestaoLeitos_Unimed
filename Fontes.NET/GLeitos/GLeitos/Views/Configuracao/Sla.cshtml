@using GLeitos.GLeitosTO
@model GLeitos.Models.SLAView
@{
    /**/

    Layout = "../Layout/_LayoutGLeitos.cshtml";
}


<!--Fundo principal-->
<div class="templatemo-content-container">

    <div class="templatemo-content-container">
        <div class="templatemo-content-widget black-bg">
            <h2 class="margin-bottom-10"><a href="#" onclick="voltarsla('@Url.Action("VoltarListaSLA", "Configuracao")');"><i class="arrow-back fa fa-arrow-alt-circle-left fa-fw"></i></a>SLA<a href="#" onclick="javascript: carregaTela('@Url.Action("Index","Adm")');"><i class="fas fa-home fa-fw icon-home" title="Início"></i></a></h2> <!--Título da Página-->

            @using (Html.BeginForm("SalvarSLA", "Configuracao", FormMethod.Post,
                new { enctype = "multipart/form-data", name = "FormSLA", id = "FormSLA", @class = "templatemo-login-form" }))
            {
                @Html.ValidationSummary(true);

                <div class="background_checklist">
                    <div class="row form-group">
                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Tipo Situação Acomodação</label> <!-- Tipo Situação Acomodação -->
                            @Html.HiddenFor(model => model.Sla.id_TipoSituacaoAcomodacao, new { @id = "hdnid_TipoSituacaoAcomodacao" })
                            <select id="selTipoSituacaoAcomodacao" class="form-control" @Model.dropDisabled>
                                <option value="">SELECIONE</option>
                                @foreach (var item in Model.ListaTipoSituacaoAcomodacao.OrderBy(m => m.nome_TipoSituacaoAcomodacao))
                                {
                                    if (item.id_TipoSituacaoAcomodacao == Model.Sla.id_TipoSituacaoAcomodacao)
                                    {
                                        <option value="@item.id_TipoSituacaoAcomodacao" selected disabled>@item.nome_TipoSituacaoAcomodacao</option>
                                    }
                                    else
                                    {
                                        <option value="@item.id_TipoSituacaoAcomodacao">@item.nome_TipoSituacaoAcomodacao</option>
                                    }
                                }
                            </select>
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.Sla.id_TipoSituacaoAcomodacao, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Tipo Atividade Acomodação</label> <!-- Tipo Atividade Acomodação -->
                            @Html.HiddenFor(model => model.Sla.id_Empresa, new { @id = "hdnid_Empresa" })
                            @Html.HiddenFor(model => model.Sla.id_TipoAtividadeAcomodacao, new { @id = "hdnid_TipoAtividadeAcomodacao" })
                            <select id="selTipoAtividadeAcomodacao" class="form-control" @Model.dropDisabled>
                                <option value="">SELECIONE</option>
                                @foreach (var item in Model.ListaTipoAtividadeAcomodacao.OrderBy(m => m.nome_TipoAtividadeAcomodacao))
                                {
                                    if (item.id_TipoAtividadeAcomodacao == Model.Sla.id_TipoAtividadeAcomodacao)
                                    {
                                        <option value="@item.id_TipoAtividadeAcomodacao" selected>@item.nome_TipoAtividadeAcomodacao</option>
                                    }
                                    else
                                    {
                                        <option value="@item.id_TipoAtividadeAcomodacao">@item.nome_TipoAtividadeAcomodacao</option>
                                    }
                                }
                            </select>
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.Sla.id_TipoAtividadeAcomodacao, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Tipo de Ação Acomodação</label> <!-- Tipo Acao Acomodação -->
                            @Html.HiddenFor(model => model.Sla.id_TipoAcaoAcomodacao, new { @id = "hdnid_TipoAcaoAcomodacao" })
                            <select id="selTipoAcaoAcomodacao" class="form-control" @Model.dropDisabled>
                                <option value="">SELECIONE</option>
                                @foreach (var item in Model.ListaTipoAcaoAcomodacao.OrderBy(m => m.nome_TipoAcaoAcomodacao))
                                {
                                    if (item.id_TipoAcaoAcomodacao == Model.Sla.id_TipoAcaoAcomodacao)
                                    {
                                        <option value="@item.id_TipoAcaoAcomodacao" selected disabled>@item.nome_TipoAcaoAcomodacao</option>
                                    }
                                    else
                                    {
                                        <option value="@item.id_TipoAcaoAcomodacao">@item.nome_TipoAcaoAcomodacao</option>
                                    }
                                }
                            </select>
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.Sla.id_TipoAcaoAcomodacao, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>

                    </div>

                    <div class="row form-group">
                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Tipo de Acomodação</label> <!-- Tipo Acomodação -->
                            @Html.HiddenFor(model => model.Sla.id_TipoAcomodacao, new { @id = "hdnid_TipoAcomodacao" })
                            <select id="selTipoAcomodacao" class="form-control" @Model.dropDisabled>
                                <option value="">SELECIONE</option>
                                @foreach (var item in Model.ListaTipoAcomodacao.OrderBy(m => m.nome_TipoAcomodacao))
                                {
                                    if (item.id_TipoAcomodacao == Model.Sla.id_TipoAcomodacao)
                                    {
                                        <option value="@item.id_TipoAcomodacao" selected disabled>@item.nome_TipoAcomodacao</option>
                                    }
                                    else
                                    {
                                        <option value="@item.id_TipoAcomodacao">@item.nome_TipoAcomodacao</option>
                                    }
                                }
                            </select>
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.Sla.id_TipoAcomodacao, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Tempo em Minutos</label> <!-- Tempo em minutos -->
                            @Html.TextBoxFor(model => model.Sla.tempo_Minutos, new { @id = "tempo_Minutos", @class = "form-control" })
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.Sla.tempo_Minutos, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Versão</label> <!-- Versão -->
                            @if (Model.Sla.versao_SLA == "")
                            {
                                Model.Sla.versao_SLA = "1";
                            }

                            @Html.TextBoxFor(model => model.Sla.versao_SLA, new {@name = "versao_SLA1",  @id = "versao_SLA1", @class = "form-control", @disabled = true })
                            @Html.HiddenFor(model => model.Sla.versao_SLA, new { @id = "versao_SLA"})
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.Sla.versao_SLA, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>

                        <div class="col-lg-1 col-md-1 form-group formLine">
                            <label for="control-label templatemo-block">&nbsp;&nbsp;</label>
                            <div>
                                <a href="#" onclick="javascript: salvarsla('@Url.Action("SalvarSLA", "Configuracao")');"><button type="button" class="templatemo-green-button margin-bottom-10" id="btn_novo">Salvar</button></a>
                            </div>
                        </div>

                    </div>
                    
                </div>


            }

        </div>
        <footer class="text-right">
            <p>
                Copyright &copy; 2019 Unimed Nordeste-RS
                | Desenvolvido por <a href="http://www.exporj.com.br/" target="s" class="texto-link">ExpoRJ</a>
            </p>
        </footer>
    </div>
</div>
@if (!string.IsNullOrWhiteSpace(Model.mensagem))
{
    <script>emite_msg('@Model.mensagem');</script>
}
@if (!string.IsNullOrWhiteSpace(Model.erro))
{
    <script>emite_msg('@Model.erro');</script>
}
@Scripts.Render("~/scripts/valida.sla.js")
@Scripts.Render("~/scripts/paginar.sla.js")