@using GLeitos.GLeitosTO
@model GLeitos.Models.FluxoAutomaticoCheckView
@{
    /**/

    Layout = "../Layout/_LayoutGLeitos.cshtml";
}


<!--Fundo principal-->
<div class="templatemo-content-container">

    <div class="templatemo-content-container">
        <div class="templatemo-content-widget black-bg">
            <h2 class="margin-bottom-10"><a href="#" onclick="javascript: carregaTela('@Url.Action("Index", "Adm")');"><i class="arrow-back fa fa-arrow-alt-circle-left fa-fw"></i></a>Fluxo Automático Check-List<a href="#" onclick="javascript: carregaTela('@Url.Action("Index","Adm")');"><i class="fas fa-home fa-fw icon-home" title="Início"></i></a></h2> <!--Título da Página-->

            @using (Html.BeginForm("SalvarFluxoAutomaticoCheck", "Configuracao", FormMethod.Post,
                new { enctype = "multipart/form-data", name = "FormFluxoAutomaticoCheck", id = "FormFluxoAutomaticoCheck", @class = "templatemo-login-form" }))
            {
                @Html.ValidationSummary(true);

                <div class="background_checklist">
                    <div class="row form-group">
                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Tipo Situação Acomodação Origem</label> <!-- Tipo Situação Acomodação -->
                            @Html.HiddenFor(model => model.FluxoAutomaticoCheck.id_TipoSituacaoAcomodacao, new { @id = "hdnid_TipoSituacaoAcomodacao" })
                            <select id="selTipoSituacaoAcomodacao" class="form-control" @Model.dropDisabled>
                                <option value="">Selecione</option>
                                @foreach (var item in Model.ListaTipoSituacaoAcomodacao.OrderBy(m => m.ordem))
                                {
                                    if (item.id_TipoSituacaoAcomodacao == Model.FluxoAutomaticoCheck.id_TipoSituacaoAcomodacao)
                                    {
                                        <option value="@item.id_TipoSituacaoAcomodacao" selected>@item.nome_TipoSituacaoAcomodacao</option>
                                    }
                                    else
                                    {
                                        <option value="@item.id_TipoSituacaoAcomodacao">@item.nome_TipoSituacaoAcomodacao</option>
                                    }
                                }
                            </select>
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.FluxoAutomaticoCheck.id_TipoSituacaoAcomodacao, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Check-List</label> <!-- Tipo Atividade Acomodação -->
                            @Html.HiddenFor(model => model.FluxoAutomaticoCheck.id_Checklist, new { @id = "hdnid_Checklist" })
                            <select id="selCheckList" class="form-control" @Model.dropDisabled>
                                <option value="">Selecione</option>
                                @foreach (var item in Model.ListaCheckList.OrderBy(m => m.nome_Checklist))
                                {
                                    if (item.id_Checklist == Model.FluxoAutomaticoCheck.id_Checklist)
                                    {
                                        <option value="@item.id_Checklist" selected>@item.nome_Checklist</option>
                                    }
                                    else
                                    {
                                        <option value="@item.id_Checklist">@item.nome_Checklist</option>
                                    }
                                }
                            </select>
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.FluxoAutomaticoCheck.id_Checklist, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Item Check-List</label> <!-- Tipo Acao Acomodação -->
                            @Html.HiddenFor(model => model.FluxoAutomaticoCheck.id_ItemChecklist, new { @id = "hdnid_ItemChecklist" })
                            <select id="selItemCheckList" class="form-control" @Model.dropDisabled>
                                <option value="">Selecione</option>
                                @foreach (var item in Model.ListaItemCheckList.OrderBy(m => m.nome_ItemChecklist))
                                {
                                    if (item.id_ItemChecklist == Model.FluxoAutomaticoCheck.id_ItemChecklist)
                                    {
                                        <option value="@item.id_ItemChecklist" selected>@item.nome_ItemChecklist</option>
                                    }
                                    else
                                    {
                                        <option value="@item.id_ItemChecklist">@item.nome_ItemChecklist</option>
                                    }
                                }
                            </select>
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.FluxoAutomaticoCheck.id_ItemChecklist, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>

                    </div>

                    <div class="row form-group">
                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Tipo Atividade Destino</label> <!-- Tipo Situação Destino-->
                            @Html.HiddenFor(model => model.FluxoAutomaticoCheck.id_TipoAtividadeAcomodacao, new { @id = "hdnid_TipoAtividadeAcomodacao" })
                            <select id="SelTipoAtividadeAcomodacao" class="form-control">
                                <option value="">Selecione</option>
                                @foreach (var item in Model.ListaTipoAtividadeAcomodacao.OrderBy(m => m.ordem))
                                {
                                    if (item.id_TipoAtividadeAcomodacao == Model.FluxoAutomaticoCheck.id_TipoAtividadeAcomodacao)
                                    {
                                        <option value="@item.id_TipoAtividadeAcomodacao" selected>@item.nome_TipoAtividadeAcomodacao</option>
                                    }
                                    else
                                    {
                                        <option value="@item.id_TipoAtividadeAcomodacao">@item.nome_TipoAtividadeAcomodacao</option>
                                    }
                                }
                            </select>
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.FluxoAutomaticoCheck.id_TipoAtividadeAcomodacao, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Tipo Resposta</label> <!-- Resposta -->
                            @Html.HiddenFor(model => model.FluxoAutomaticoCheck.cod_Resposta, new { @id = "hdncod_Resposta" })
                            <select id="selTipoResposta" class="form-control">
                                <option value="">Selecione</option>
                                @foreach (var item in Model.ListaTipoResposta.OrderBy(m => m.cod_tipo))
                                {
                                    if (item.cod_tipo == Model.FluxoAutomaticoCheck.cod_Resposta)
                                    {
                                        <option value="@item.cod_tipo" selected>@item.nome_tipo</option>
                                    }
                                    else
                                    {
                                        <option value="@item.cod_tipo">@item.nome_tipo</option>
                                    }
                                }
                            </select>
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.FluxoAutomaticoCheck.cod_Resposta, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 form-group">
                            <label for="inputFirstName">Finalização Total</label> <!-- Permite Finalizar Total-->
                            @Html.HiddenFor(model => model.FluxoAutomaticoCheck.cod_PermiteTotal, new { @id = "hdncod_PermiteTotal" })
                            <select id="selTipoFinalizacao" class="form-control">
                                <option value="">Selecione</option>
                                @foreach (var item in Model.ListaPermissaoFinalizacaoTotal.OrderBy(m => m.cod_tipo))
                                {
                                    if (item.cod_tipo == Model.FluxoAutomaticoCheck.cod_Resposta)
                                    {
                                        <option value="@item.cod_tipo" selected>@item.nome_tipo</option>
                                    }
                                    else
                                    {
                                        <option value="@item.cod_tipo">@item.nome_tipo</option>
                                    }
                                }
                            </select>
                            <div class="formLine">
                                @Html.ValidationMessageFor(x => x.FluxoAutomaticoCheck.cod_PermiteTotal, "", new { @class = "text-danger-yellow" })
                            </div>
                        </div>

                        <div class="col-lg-1 col-md-1 form-group formLine">
                            <label for="control-label templatemo-block">&nbsp;&nbsp;</label>
                            <div>
                                <a href="#" onclick="javascript: salvarfluxocheck('@Url.Action("SalvarFluxoAutomaticoCheck", "Configuracao")');"><button type="button" class="templatemo-green-button margin-bottom-10" id="btn_novo">Salvar</button></a>
                            </div>
                        </div>

                    </div>

                    <table id="tblrelacionamento" class="table table-responsive">
                        <thead>
                            <tr style="background-color:#003A2F;">
                                <td>SITUAÇÃO</td>
                                <td>CHECK-LIST</td>
                                <td>ITEM CHECK-LIST</td>
                                <td>ATIVIDADE DESTINO</td>
                                <td>RESPOSTA</td>
                                <td>FINALIZAÇÃO TOTAL</td>
                                <td>&nbsp;</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListaFluxoAutomaticoCheck.OrderBy(m => m.nome_TipoSituacaoAcomodacao))
                            {
                                <tr class="linhaheight">
                                    <td>
                                        <p id="nome-empresa">@item.nome_TipoSituacaoAcomodacao.Trim()</p>
                                    </td>
                                    <td>
                                        <p id="nome-empresa">@item.nome_Checklist.Trim()</p>
                                    </td>
                                    <td>
                                        <p id="nome-empresa">@item.nome_ItemChecklist.Trim()</p>
                                    </td>
                                    <td>
                                        <p id="nome-empresa">@item.nome_TipoAtividadeAcomodacao.Trim()</p>
                                    </td>
                                    <td>
                                        <p id="nome-empresa">@item.cod_Resposta.Trim()</p>
                                    </td>
                                    <td>
                                        <p id="nome-empresa">@item.cod_PermiteTotal.Trim()</p>
                                    </td>
                                    <td style="text-align:right;">
                                        @*<a href="#" title="Editar Fluxo" onclick="javascript: editar('@Url.Action("FluxoAutomatico", "Configuracao", new { id_tiposituacaoacomodacao = item.id_TipoSituacaoAcomodacaoOrigem, id_tipoatividadeacomodacao = item.id_TipoAtividadeAcomodacaoOrigem, id_tipoacaoacomodacao=item.id_TipoAcaoAcomodacaoOrigem })');"><button type="button" class="templatemo-black-button"><i class="fas fa-edit fa-fw"></i></button></a>*@
                                        <a href="#" title="Excluir Fluxo Automático" onclick="javascript: excluir('@Url.Action("ExcluirFluxoAutomaticoCheck", "Configuracao", new { id_tiposituacaoacomodacao = item.id_TipoSituacaoAcomodacao, id_checklist = item.id_Checklist, id_itemchecklist=item.id_ItemChecklist, id_tipoatividadeacomodacao = item.id_TipoAtividadeAcomodacao})', 'Deseja excluir este item?');"><button type="button" class="templatemo-black-button"><i class="fas fa-trash fa-fw"></i></button></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>


            }

        </div>
        <footer class="text-right">
            <p>
                Copyright &copy; 2019 Unimed Nordeste-RS
                | Desenvolvido por <a href="http://www.exporj.com.br/" target="s" class="texto-link">ExpoRJ</a>
            </p>
        </footer>
    </div>
</div>
@if (!string.IsNullOrWhiteSpace(Model.mensagem))
{
    <script>emite_msg('@Model.mensagem');</script>
}
@if (!string.IsNullOrWhiteSpace(Model.erro))
{
    <script>emite_msg('@Model.erro');</script>
}
@Html.HiddenFor(model => model.tkn_configuracao, new { @id = "hdntkn_configuracao" })
@Html.HiddenFor(model => model.url_listaCheckList, new { @id = "hdnurl_listaCheckList" })

@Scripts.Render("~/scripts/valida.fluxoautomaticocheck.js")