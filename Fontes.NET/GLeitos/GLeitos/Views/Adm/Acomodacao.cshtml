@using GLeitos.GLeitosTO
@model GLeitos.Models.AcomodacaoView
@{
                /**/

                /**/

                Layout = "../Layout/_LayoutGLeitos.cshtml";
}


<!--Fundo principal-->
<div class="templatemo-content-container">

    <div class="templatemo-content-container">
        <div class="templatemo-content-widget black-bg">
            <h2 class="margin-bottom-10"><a href="#" onclick="javascript: carregaTela('@Url.Action("ListaAcomodacao", "Adm")');"><i class="arrow-back fa fa-arrow-alt-circle-left fa-fw"></i></a>Acomodação<a href="#" onclick="javascript: carregaTela('@Url.Action("Index","Adm")');"><i class="fas fa-home fa-fw icon-home" title="Início"></i></a></h2> <!--Título da Página-->
            <!--<p>Here goes another form and form controls.</p>-->

            @using (Html.BeginForm("SalvarAcomodacao", "Adm", FormMethod.Post,
                new { enctype = "multipart/form-data", name = "FormAcomodacao", id = "FormAcomodacao", @class = "templatemo-login-form" }))
            {
                @Html.ValidationSummary(true);

                <div class="row form-group">
                    <div class="col-lg-8 col-md-8 form-group">
                        <label for="inputFirstName">Nome da Acomodação</label> <!--Nome da Acomodação-->
                        @Html.HiddenFor(model => model.Acomodacao.id_Acomodacao, new { @id = "hdnid_Acomodacao" })
                        @Html.TextBoxFor(model => model.Acomodacao.nome_Acomodacao, new { @id = "nome_Acomodacao", @Class = "form-control", @placeholder = "Acomodação" })
                        <div class="formLine">
                            @Html.ValidationMessageFor(x => x.Acomodacao.nome_Acomodacao, "", new { @class = "text-danger-yellow" })
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 form-group">
                        <label for="inputLastName">Código Externo</label> <!--Código Externo-->
                        @Html.TextBoxFor(model => model.Acomodacao.codExterno_Acomodacao, new { @id = "codExterno_TipoAcomodacao", @Class = "form-control", @placeholder = "Código Externo da acomodação" })
                        <div class="formLine">
                            @Html.ValidationMessageFor(x => x.Acomodacao.codExterno_Acomodacao, "", new { @class = "text-danger-yellow" })
                        </div>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-lg-4 col-md-4 form-group">
                        @Html.HiddenFor(model => model.Acomodacao.id_Empresa, new { @id = "hdnid_Empresa" })
                        <label for="control-label templatemo-block">Empresa</label>
                        <div class="custom-select">
                            <select id="selEmpresa" class="form-control" disabled>
                                @foreach (var item in Model.ListaEmpresas.OrderBy(m => m.nome_Empresa))
                                {
                                    if (!string.IsNullOrWhiteSpace(Model.Acomodacao.id_Empresa))
                                    {
                                        if (Model.Acomodacao.id_Empresa == item.id_Empresa.ToUpper().Trim())
                                        {
                                            <option value="@item.id_Empresa" selected>@item.nome_Empresa</option>
                                        }
                                        else
                                        {
                                            <option value="@item.id_Empresa">@item.nome_Empresa</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="@item.id_Empresa">@item.nome_Empresa</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="formLine">
                            @Html.ValidationMessageFor(x => x.Acomodacao.id_Empresa, "", new { @class = "text-danger-yellow" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 form-group">
                        @Html.HiddenFor(model => model.Acomodacao.id_Setor, new { @id = "hdnid_Setor" })
                        <label for="control-label templatemo-block">Setor</label>
                        <div class="custom-select">
                            <select id="selSetor" class="form-control">
                                @foreach (var item in Model.ListaSetores.OrderBy(m => m.nome_Setor))
                                {
                                    if (!string.IsNullOrWhiteSpace(Model.Acomodacao.id_Setor))
                                    {
                                        if (Model.Acomodacao.id_Setor == item.id_Setor.ToUpper().Trim())
                                        {
                                            <option value="@item.id_Setor" selected>@item.nome_Setor</option>
                                        }
                                        else
                                        {
                                            <option value="@item.id_Setor">@item.nome_Setor</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="@item.id_Setor">@item.nome_Setor</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="formLine">
                            @Html.ValidationMessageFor(x => x.Acomodacao.id_Empresa, "", new { @class = "text-danger-yellow" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 form-group">
                        @Html.HiddenFor(model => model.Acomodacao.id_TipoAcomodacao, new { @id = "hdnid_TipoAcomodacao" })
                        <label for="control-label templatemo-block">Tipo de Acomodação</label>
                        <div class="custom-select">
                            <select id="selTipoAcomodacao" class="form-control">
                                @foreach (var item in Model.ListaTiposAcomodacoes.OrderBy(m => m.nome_TipoAcomodacao))
                                {
                                    if (!string.IsNullOrWhiteSpace(Model.Acomodacao.id_TipoAcomodacao))
                                    {
                                        if (Model.Acomodacao.id_TipoAcomodacao == item.id_TipoAcomodacao.ToUpper().Trim())
                                        {
                                            <option value="@item.id_TipoAcomodacao" selected>@item.nome_TipoAcomodacao</option>
                                        }
                                        else
                                        {
                                            <option value="@item.id_TipoAcomodacao">@item.nome_TipoAcomodacao</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="@item.id_TipoAcomodacao">@item.nome_TipoAcomodacao</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="formLine">
                            @Html.ValidationMessageFor(x => x.Acomodacao.id_TipoAcomodacao, "", new { @class = "text-danger-yellow" })
                        </div>
                    </div>
                </div>

                <div class="form-group text-left">
                    <button type="button" class="templatemo-white-button" onclick="javascript: excluir('@Url.Action("ExcluirAcomodacao", "Adm", new {  id_empresa =  Model.Acomodacao.id_Empresa, id_acomodacao = Model.Acomodacao.id_Acomodacao})', 'Deseja excluir esta acomodação?');">Apagar</button>
                    <button type="button" class="templatemo-blue-button" onclick="javascript: salvaracomodacao('@Url.Action("SalvarAcomodacao", "Adm", new { id_acomodacao = Model.Acomodacao.id_Acomodacao})');">Salvar</button>
                </div>

            }

        </div>
        <footer class="text-right">
            <p>
                Copyright &copy; 2019 Unimed Nordeste-RS
                | Desenvolvido por <a href="http://www.exporj.com.br/" target="s" class="texto-link">ExpoRJ</a>
            </p>
        </footer>
    </div>
</div>
@if (!string.IsNullOrWhiteSpace(Model.mensagem))
{
    <script>emite_msg('@Model.mensagem');</script>
}
@if (!string.IsNullOrWhiteSpace(Model.erro))
{
    <script>emite_msg('@Model.erro');</script>
}
@Scripts.Render("~/scripts/valida.acomodacao.js")